= form_for @workout, html: { class: "form form-horizontal workout" } do |f|
  .form-group
    = f.label :reps, class: 'control-label col-lg-2'
    .col-lg-10
      = f.text_field :reps, class: 'form-control', required: true
    = f.error_span(:reps)
  .form-group
    = f.label :user_id, class: 'control-label col-lg-2'
    .col-lg-10
      = f.text_field :user_id, class: 'form-control', required: true
    = f.error_span(:user_id)
  .form-group
    = f.label :finished_at, class: 'control-label col-lg-2'
    .col-lg-10
      = f.text_field :finished_at, class: 'form-control', required: true
    = f.error_span(:finished_at)
  .form-group
    .col-lg-offset-2.col-lg-10
      = f.submit nil,class: 'btn btn-primary'
      = link_to t('.cancel', :default => t("helpers.links.cancel")), workouts_path, :class => 'btn btn-default'
